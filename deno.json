{
  "name": "@dreamer/video-player",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "exports": {
    ".": "./src/mod.ts",
    "./player": "./src/player.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**",
      "**/examples/**"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.15",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.2",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.12",
    "hls.js": "npm:hls.js@1.6.15",
    "dashjs": "npm:dashjs@4.7.4",
    "flv.js": "npm:flv.js@1.6.2"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  }
}
